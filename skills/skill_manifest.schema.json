{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "skill_name": { "type": "string" },
    "version": { "type": "string" },
    "description": { "type": "string" },
    "inputs": {
      "type": "object",
      "description": "JSON schema for input arguments"
    },
    "outputs": {
      "type": "object",
      "description": "JSON schema for output structure"
    },
    "permissions": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["skill_name", "inputs", "outputs"]
}
